<%- include("partials/header.ejs") %>

<% if (post) { %>
  <div class="post-content-container">
  <h1 class="post-title"><%= post.postName %></h1>
  <h4 class="post-author">Post by <%= post.postAuthor %></h4>
  <p class="post-content"><%= post.postData %></p>
  </div>
<% } else { %>
  <h1>Error: Post not found</h1>
<% } %>

